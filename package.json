{
  "name": "pjt014",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "NODE_ENV=development DEV_RELOAD=1 nodemon --watch src --ext js,mjs,json --signal SIGTERM --exec \"node src/core/server.js\"",
    "test": "node --test --test-reporter=spec",
    "test:e2e": "playwright test",
    "test:e2e:min": "PW_SCREENSHOT=only-on-failure PW_TRACE=retain-on-failure PW_VIDEO=off PW_WORKERS=1 playwright test",
    "test:e2e:headed": "playwright test --headed",
    "mcp:playwright": "playwright-mcp start --base-url=http://localhost:3014",
    "lint": "eslint . --ext .js,.mjs,.cjs",
    "format": "prettier --write .",
    "worker": "node scripts/workers/example_worker.js",
    "worker:refresh": "echo 'refreshing workers (placeholder)'"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.1.4",
    "playwright-mcp": "^0.0.7",
    "prettier": "^3.3.3"
  }
}
